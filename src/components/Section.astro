---
const {color, title, subtitle} = Astro.props;
const textColor = `text-${color}`;

---

<section class="landing-section bg-black h-screen w-full text-center relative overflow-hidden" data-header-color={color}>
		<div class="z-30 relative flex flex-col justify-between h-full">
				
			<header class="z-30 relative">
		
					<h2 class={`${textColor} pt-40 text-4xl font-medium`}>{title}</h2>
					<p class={`${textColor} text-base`}>{subtitle}</p>
		
				</header>
				<footer class="pb-20">
                    <slot name="footer" />
				</footer>
		</div>

		<div class="absolute top-0 bottom-0 h-full z-10 w-full">
            <slot name="background" />
			<video autoplay muted loop src="./video.webm"></video> 
		</div>
	</section> 
